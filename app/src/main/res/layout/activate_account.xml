<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d7fd7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Go Crazy"
        android:id="@+id/doc_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:textColor="#f9f9f9"
        android:textSize="50dp"
        android:textStyle="bold"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have account ? Login here"
        android:id="@+id/activate_text2"
        android:textColor="#fbfbfb"
        android:textSize="17dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:backgroundTint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#f9f5f5"
        android:id="@+id/activationCode"
        android:width="350dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Enter Email id"
        android:textStyle="bold"
        android:textColor="#faf4f4"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend me a code "
        android:id="@+id/activate_text1"
        android:layout_marginTop="25dp"
        android:textColor="#fafafa"
        android:textSize="20dp"
        android:layout_below="@+id/activationCode"
        android:layout_alignEnd="@+id/confirmCodeButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate my account"
        android:id="@+id/confirmCodeButton"
        android:width="350dp"
        android:layout_below="@+id/activate_text1"
        android:layout_alignStart="@+id/activationCode"
        android:layout_marginTop="30dp" />

</RelativeLayout>
