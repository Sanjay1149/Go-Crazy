<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d7fd7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Go Crazy"
        android:id="@+id/doc_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:textColor="#f9f9f9"
        android:textSize="50dp"
        android:textStyle="bold"/>

    <EditText
        android:backgroundTint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#f9f5f5"
        android:id="@+id/fullNameText"
        android:width="350dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/doc_text"
        android:layout_centerHorizontal="true"
        android:hint="Enter your full name"
        android:textStyle="bold"
        android:textColor="#faf4f4"
        />

    <EditText
        android:backgroundTint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailIDText"
        android:width="350dp"
        android:hint="Enter Email id"
        android:textColorHint="#f9f5f5"
        android:textStyle="bold"
        android:textColor="#faf4f4"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/fullNameText"
        android:layout_alignStart="@+id/fullNameText" />

    <EditText
        android:backgroundTint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordText"
        android:textColorHint="#f9f5f5"
        android:width="350dp"
        android:hint="Enter Password"
        android:textStyle="bold"
        android:textColor="#faf4f4"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/emailIDText"
        android:layout_alignStart="@+id/emailIDText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create my account"
        android:id="@+id/createProfile"
        android:layout_below="@+id/passwordText"
        android:layout_alignStart="@+id/passwordText"
        android:layout_marginTop="42dp"
        android:width="350dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have account ? Login here"
        android:id="@+id/alreadyAccount"
        android:textColor="#fbfbfb"
        android:textSize="17dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>